@model EntityLayer.Concrete.WriterMessage

@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>Yeni Mesaj Gönderme Sayfası</h1>
<br />
<form class="form-group" method="post">
    @Html.Label("Alıcı Mail")
    @Html.TextAreaFor(x=> x.Receiver, 10 , 3, new { @class="form-control" })
    <br />
    @Html.Label("Konu")
    @Html.TextAreaFor(x=> x.Subject, 10 , 3, new { @class="form-control" })
    <br />
    @Html.Label("Mesaj")
    @Html.TextAreaFor(x=> x.Content, 10 , 3, new { @class="form-control" })
    <button type="submit" class="btn btn-outline-primary">Gönder</button>
</form>


