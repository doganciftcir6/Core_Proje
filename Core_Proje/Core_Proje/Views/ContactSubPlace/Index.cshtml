@model EntityLayer.Concrete.Contact

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("Index", "ContactSubplace", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> Alt İletişim Bilgileri Düzenleme Paneli </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>Id</label>
                        @Html.TextBoxFor(x=> x.ContactId, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Başlık</label>
                        <input type="text" class="form-control" name="Title" value="@Model.Title">
                    </div>
                    <div class="form-group">
                        <label>Telefon</label>
                        <input type="text" class="form-control" name="Phone" value="@Model.Phone">
                    </div>
                    <div class="form-group">
                        <label>Mail</label>
                        <input type="text" class="form-control" name="Mail" value="@Model.Mail">
                    </div>
                    <div class="form-group">
                        <label>Açıklama</label>
                        <textarea asp-for="Description" class="form-control" rows="6"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                    <button class="btn btn-dark">İptal</button>
                </form>
            </div>
        </div>
    </div>
}

