@model EntityLayer.Concrete.Testimonial

@{
    ViewData["Title"] = "EditTestimonial";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description"> Referans Düzenleme Sayfası </p>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label>ID</label>
                    <input type="text" class="form-control" name="SkillId" value="@Model.TestimonialId">
                </div>
                  <div class="form-group">
                    <label>Ad Soyad</label>
                    <input type="text" class="form-control" name="SkillId" value="@Model.ClientName">
                </div>
                  <div class="form-group">
                    <label>Şirket</label>
                    <input type="text" class="form-control" name="SkillId" value="@Model.Company">
                </div>
                <div class="form-group">
                    <label>Yetenek Başlığı</label>
                    <input type="text" class="form-control" name="Title" value="@Model.Title">
                </div>
                <div class="form-group">
                    <label>Resim Yolu</label>
                    <input type="text" class="form-control" name="SkillId" value="@Model.ImageUrl">
                </div>
                <div class="form-group">
                    <label>Yorum</label>
                    <textarea asp-for="Comment" class="form-control"></textarea>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <button class="btn btn-dark">İptal</button>
            </form>
        </div>
    </div>
</div>

