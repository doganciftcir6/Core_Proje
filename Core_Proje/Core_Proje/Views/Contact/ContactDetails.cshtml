@model EntityLayer.Concrete.Message
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "ContactDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> Mesaj Detay Sayfası </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>Id</label>
                        @Html.TextBoxFor(x=> x.MessageId, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Başlık</label>
                        <input type="text" class="form-control" name="Name" value="@Model.Name">
                    </div>
                    <div class="form-group">
                        <label>Mail</label>
                    <input type="text" class="form-control" name="Mail" value="@Model.Mail">
                    </div>
                    <div class="form-group">
                        <label>Tarih</label>
                        <input type="text" class="form-control" name="Date" value="@Model.Date">
                    </div>
                    <div class="form-group">
                        <label>Açıklama</label>
                        <textarea asp-for="Content" class="form-control"  rows="6" ></textarea>
                    </div>
                    <a asp-action="Index" class="btn btn-primary mr-2">İletişim Sayfası</a>
                </form>
            </div>
        </div>
    </div>

